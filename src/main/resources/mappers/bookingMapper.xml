<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.example.booking.mapper.BookingMapper">
 	<select id="bookingList" resultType="com.example.booking.domain.Booking">
 		SELECT
 			`id`
			,`name`
			,`headcount`
			,`day`
			,`date`
			,`phoneNumber`
			,`state`
			,`createdAt`
			,`updatedAt`
		FROM
			`booking`
 	</select>
 	<delete id="deleteBookingById" parameterType="int">
 		DELETE
 		FROM
 			`booking`
 		WHERE
 			`id` = #{id}
 	</delete>
 	<insert id="insertBooking" parameterType="map">
 		INSERT INTO `booking`
 		(
			`name`
			,`headcount`
			,`day`
			,`date`
			,`phoneNumber`
			,`state`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{name}
 			, #{headcount}
 			, #{day}
 			, #{date}
 			, #{phoneNumber}
 			, '대기중' <!-- 하드 코딩 -->
 			, NOW()
 			, NOW()
 		);
 	</insert>
 	
 	<select id="checkBookingByNameAndPhone" resultType="com.example.booking.domain.Booking">
 		SELECT
 			`id`
			,`name`
			,`headcount`
			,`day`
			,`date`
			,`phoneNumber`
			,`state`
			,`createdAt`
			,`updatedAt`
		FROM
			`booking`
		WHERE
			`name` = #{name} and
			`phoneNumber` = ${phoneNumber}
		ORDER BY `id` DESC
		LIMIT 1
 	</select>
 </mapper>